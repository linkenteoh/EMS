<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/Site.css" />
    <link rel="stylesheet" href="~/Content/app.css">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("head", false)
    <style>
        .dropdown:hover .dropdown-menu {
            display: block;
            margin-top: 0;
        }
    </style>
</head>
<body>
    <div class="info">@TempData["Info"]</div>

    <div class="navbar navbar-inverse navbar-fixed-top bg-light">
        <div class="container">
            <div class="navbar-header">

                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="nav-items">
                    <img src="~/Images/logo2.png" alt="Logo" id="logo" class="img-responsive" />
                    @Html.ActionLink("TARUC Event Management", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Announcements", "Announcements", "Home")</li>
                    <li>@Html.ActionLink("Events", "Events", "Home")</li>
                    @{
                        if (User.Identity.IsAuthenticated)
                        {
                            DBEntities db = new DBEntities();
                            var org = db.Organisers.FirstOrDefault(or => or.Id == (db.Users.FirstOrDefault(o => o.username == User.Identity.Name).Id));
                            if (org != null)
                            {
                                <li class="dropdown">
                                    <a class="dropdown-toggle" data-toggle="dropdown">Proposals</a>
                                    <ul class="dropdown-menu">
                                        <li>@Html.ActionLink("Propose event", "ProposeEvent", "Event")</li>
                                        <li>@Html.ActionLink("Event(s) proposed", "EventsProposed", "Event")</li>
                                    </ul>
                                </li>
                            }
                        }
                    }

                </ul>
                <ul class="nav navbar-nav navbar-right right-aligned-items">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Sign Up", "Register", "Account")</li>
                        <li>@Html.ActionLink("Login", "Login", "Account")</li>

                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown">@User.Identity.Name<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Events Joined", "EventSearchIndex", "Event")</li>
                                <li>@Html.ActionLink("Settings", "Edit", "User")</li>
                                <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
                            </ul>
                        </li>
                    }

                </ul>

            </div>

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
@*        <footer>
            <p>Developed by TARUC &copy; @DateTime.Now.Year </p>
        </footer>*@
    </div>
    <script src="~/Scripts/jquery-3.5.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/app.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @RenderSection("foot", false)
</body>
</html>
