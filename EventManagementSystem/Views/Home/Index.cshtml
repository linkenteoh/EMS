@model IEnumerable<Advertisement>

@{
    ViewBag.Title = "Index";
    int count = 0;
}

<div class="whole">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
  @*      <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>*@

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            @foreach (var a in Model)
            {
                if (a.status == true)
                {
                    count++;
                    <ol class="carousel-indicators">
                        @if (count == 1)
                        {
                            <li data-target="#myCarousel" data-slide-to="@count" class="active"></li>
                        }
                        else
                        {
                            <li data-target="#myCarousel" data-slide-to="@count"></li>
                        }

                    </ol>

                    if (count == 1)
                    {

                        <div class="item active" id="advertisement">
                            <a href="FFF"><img src="~/Photo/@a.photoURL" alt="Los Angeles"></a>
                        </div>

                    }
                    else
                    {
                        <div class="item" id="advertisement">
                            <a href="FFF"><img src="~/Photo/@a.photoURL" alt="Los Angeles"></a>
                        </div>

                    }

                }

            }
            @*<div class="item active">
            <a href="FFF"><img src="~/1.jpg" alt="Los Angeles"></a>
        </div>

        <div class="item " >
            <img src="~/Images/WeChat Image_20201202023139.jpg" alt="Chicago">
        </div>

        <div class="item">
            <img src="ny.jpg" alt="New York">
        </div>*@
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="content">
        <div class="content-first">
            <div>
                <h1 style="line-height: 65px; font-size:60px;"><b>Organize <br />Events<br /> On Campus?</b></h1><br />
            </div>
            <div>
                <p>If you wish to organize/host your events on our campus,</p>
                <a href="~/User/RegOrganiser" class="btn btn-primary" style="padding:15px;"><b>Register as an organiser now!</b></a>
            </div>

        </div>
    </div>
</div>

